<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="Menu_Grad">
        <GradientStop Offset="1" Color="Yellow"/>
        <GradientStop Offset="0.6" Color="#ffae42"/>
        <GradientStop Offset="0" Color="#ff4500"/>
    </LinearGradientBrush>

    <Style TargetType="Menu" x:Key="Menu_Style">
        <Setter Property="Background" Value="{StaticResource Menu_Grad}"/>
    </Style>

    <Style TargetType="Button" x:Key="Button_Style">
        <Setter Property="Background" Value="{StaticResource Menu_Grad}"/>
    </Style>

    <Style TargetType="ComboBox" x:Key="ComboBox_Style">
        <Setter Property="Background" Value="#FFFE99"/>
    </Style>

    <Style TargetType="ComboBoxItem" x:Key="ComboBoxItem_Style">
        <Setter Property="Background" Value="#FFFE99"/>
    </Style>

</ResourceDictionary>