<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button" x:Key="Button_Style">
        <Setter Property="Background" Value="Black"/>
        <Setter Property="Width" Value="75"/>
        <Setter Property="Height" Value="35"/>
    </Style>

    <Style TargetType="ListView" x:Key="ListView_Style">
        <Setter Property="Background" Value="#FFFE99"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="Main_Stuff_Style">
        <Setter Property="Background" Value="LightGoldenrodYellow"/>
    </Style>

    <LinearGradientBrush x:Key="Menu_Grad">
        <GradientStop Offset="0" Color="Yellow"/>
        <GradientStop Offset="0.6" Color="#ffae42"/>
        <GradientStop Offset="1" Color="#ff4500"/>
    </LinearGradientBrush>
    
    <Style TargetType="Menu" x:Key="Menu_Style">
        <Setter Property="Background" Value="{StaticResource Menu_Grad}"/>
    </Style>

    <Style TargetType="MenuItem" x:Key="MenuItem_Style">
        <Setter Property="Background" Value="{StaticResource Menu_Grad}"/>
    </Style>

    <Style TargetType="Button" x:Key="Button_Style2">
        <Setter Property="Background" Value="{StaticResource Menu_Grad}"/>
    </Style>

    <PathGeometry x:Key="pot">
        <PathFigure StartPoint="270,150">
            <ArcSegment IsLargeArc="True" Size="100, 100" Point="269, 150" SweepDirection="Clockwise"/>
        </PathFigure>
    </PathGeometry>

</ResourceDictionary>